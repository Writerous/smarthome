{
  // Настройки проекта
  "env": {
    // Проект для браузера
    "browser": true,
    // Включаем возможности ES6
    "es6": true,
    // Добавляем возможности ES2017
    "es2017": true
  },
  // Наборы правил тынькова
  "extends": [
    "./node_modules/@tinkoff/linters/eslint/base/prettier",
    "./node_modules/@tinkoff/linters/eslint/angular"
  ],
  // Движок парсинга
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    // Движку нужен проект TS для правил с типами
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },

  "rules": {}
}
